<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: 'form-control' %>
  </div>
  <div>
    <%= link_to "Forgot Your Password?", new_password_reset_path %>
  </div>
  <div class="modal-footer">
    <%= submit_tag "Sign In", class: 'btn btn-success' %>
    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
    <hr />
    <%= link_to sign_in_with_google_path do%>
      <div class="btn-lg btn-block btn-social btn-google text-center google-button">
        <span class="fa fa-google"></span> Sign in with Google
      </div>
    <% end %>
    <%= link_to sign_in_with_facebook_path do%>
      <di class="btn-lg btn-block btn-social btn-facebook text-center facebook-button">
        <span class="fa fa-facebook"></span> Sign in with Facebook
      </div>
    <% end %>
  </div>
  <% end %>
