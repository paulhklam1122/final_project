<div class="bg"></div>
<div class="container" id="user-information">
  <h1>Change Password</h1>
  <%= bootstrap_form_tag url: changepassword_path, method: :patch do |f|%>
  <div class="content text-left" >

    <%= f.password_field :current_password %>

    <%= f.password_field :new_password%>

    <%= f.password_field :new_password_confirmation %>
    <%= submit_tag "Change Password", class: "btn btn-primary btn-primary" %>
    <%= link_to "Back to Edit User Information", edit_user_path(session[:user_id]) %>
    <% end %>
  </div>
</div>
